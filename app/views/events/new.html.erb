
<div class="div-shape-sm">
  <div class="container">
    <h2>Let's party!</h2>
  </div>
</div>

<div class="container mt-4 mb-4">
  <%= simple_form_for(@event) do |f| %>
      <div class="form-inputs">

        <%= f.input :name, label: "What's your name?" , input_html: {maxlength: 24, size: 40}, placeholder: "Give your event a name", class: "col-xs-6",:label_html => { :class => 'label' } %>

        <%= f.association :cuisine_events, :label => "What food are your friends into?", collection: Cuisine.all, input_html: { multiple: true }, include_hidden: false, :label_html => { :class => 'label' } %>

        <!-- <div class="category-choices">
          <% Cuisine.all.each do |cuisine| %>
          <input type="checkbox" class="hidden" value="<%= cuisine.id %>" name="post cuisine_events" id="post_cuisine_ids_<%= cuisine.id %>">
            <label for="post_cuisine_ids_<%= cuisine.id %>">
              <%= cuisine.name %>
            </label>
          <% end %>
         </div> -->

        <%= f.input :description, label: "What's the occasion?",input_html: {maxlength: 60, size: 100}, placeholder: "Add a comment for your friends!",:label_html => { :class => 'label' } %>
        <%= f.input :start_at, label: "When do you want to do this?", as: :datetime, html5: true, input_html: {class: "datepicker"}, class: "form-width", :label_html => { :class => 'label' } %>
      </div>

  </div>
      <div class="form-actions">
          <%= f.button :submit, "Next", class:"submit" %>
      </div>
<% end %>






