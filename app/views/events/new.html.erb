<h1>Create an event</h1>

<%= simple_form_for(@event) do |f| %>
    <div class="form-inputs">
      <%= f.input :name %>
      <%= f.input :description %>
      <%= f.input :start_at, as: :datetime, html5: true, input_html: {min: Date.today} %>
      <%= f.association :cuisine_events, as: :select, collection: Cuisine.all %>
    </div>

    <div class="form-actions">
        <%= f.button :submit, class:'btn btn-outline-dark dp-border-radius mb-3'%>
    </div>
<% end %>
