
<h1><%= @event.name %></h1>
<p><%= @event.description %></p>
<p><%= @event.start_at %></p>

<%= link_to "Create invitation here", new_event_invitation_path(@event), class: "btn btn-primary" %>
<br>
<%= button_to "Create Result!", event_results_path(@event), class: "btn btn-primary", method: :post %>

<ul>
  <% @event.invitations.each do |i|%>
   <li><%= i.user.email %> <%= i.cuisine.name %></li>
  <% end  %>
</ul>
