<div class="container">
  <div class="">
   <h2 class="mb-2"><strong><%= @event.name %></strong></h2>
    <h6><em>On <%= @event.start_at.strftime("%A, %b %d") %> at </i><%= @event.start_at.strftime("%I:%M %P") %></em></h6>
    <p class="text-break"><%= @event.description %></p>
  </div>
    <%= simple_form_for [@event, @invitation] do |f| %>
    <div class="mt-4 form-inputs">
      <%= f.input :location, input_html: {id:"location"}, placeholder: "Your address" ,  label: "What's your address?", required: true %>
      <%= f.input :cuisine_id, as: :select, collection: @event.cuisines, include_hidden: false,  label: "What do you want to eat?",input_html: { data: {:placeholder => 'Choose a cuisine'} }, required: true %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, 'Join in', class:'submit'%>
    </div>
    <% end %>
</div>
