<div class="mobile-frame row">
  <div class="col-md-6">
    <div class="map-results">
      <div id="map" style="height: 100vh; width: 100%;"
        data-markers="<%= @markers.to_json %>"
        data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
        data-location-marker="<%= @location_info.to_json %>">
      </div>
    </div>
  </div>
  <div class="results-content col-md-6">
    <div class="bgc-results">
      <div class="container pt-3">
        <%= link_to image_tag("logo-crop.png", class: "logo-body mb-3"), "/" %>
        <h2 class="mb-3"><strong><%= @result.event.name %></strong></h2>
        <h6><em>On <%= @result.event.start_at.strftime("%A, %b %d") %> at </i><%= @result.event.start_at.strftime("%I:%M %P") %></em></h6>
        <p class="mb-4"><%= @result.event.description %></p>
        <div class="border border-white p-3 rounded-lg">
          <h4><%= @result.restaurant.name %></h4>
          <h6><%= @result.restaurant.location %></h6>
          <h6><%= @result.restaurant.description %></h6>
        </div>
        <h6 class="mt-3 mb-3"><strong>Who's coming</strong></h6>
        <div class="d-flex notification-container" id="invite-container" data-event-id="<%= @event.id %>">
            <%= render 'shared/invited', event:@event %>
        </div>
        <%= link_to "Get Directions!", @google_url, target: :_blank, class: "btn btn-block d-btn-light p-2" %>
      </div>
    </div>
  </div>
</div>

